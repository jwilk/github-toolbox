#!/usr/bin/env bash

# Copyright Â© 2017-2021 Jakub Wilk <jwilk@jwilk.net>
# SPDX-License-Identifier: MIT

set -e -u
org=$(git -C / config --get hub.username)-forks
if [ $# -eq 0 ]
then
    printf 'Usage: %s REPO [REPO...]\n' "${0##*/}" >&2
    exit 1
fi
for repo in "$@"
do
    [ "$repo" = "${repo#*/}" ] && repo="$USER/$repo"
    repo=${repo#https://github.com/}
    url="https://api.github.com/repos/$repo/forks"
    printf 'POST %s\n' "$url" >&2
    gh api "$url" -F organization="$org" --jq='.["html_url"]'
done

# vim:ts=4 sts=4 sw=4 et
